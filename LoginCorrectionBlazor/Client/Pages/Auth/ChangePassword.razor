@page "/password"

<h3>ChangePassword</h3>

@if (badRequest)
{
    <p>Erreur dand l'ancien mot de passe</p>
}

<EditForm Model="Form" OnValidSubmit="Submit">

    <DataAnnotationsValidator></DataAnnotationsValidator>
    <label>Old Password</label>
    <InputText @bind-Value="Form.OldPassword"></InputText>

    <label>New Password</label>
    <InputText @bind-Value="Form.Password"></InputText>

    <label> Confirm New Password</label>
    <InputText @bind-Value="Form.ConfirmationPassword"></InputText>

    <ValidationSummary></ValidationSummary>

    <input type="submit" value="Valider" />
</EditForm>
